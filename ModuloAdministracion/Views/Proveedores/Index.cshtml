@model IEnumerable<ModuloAdministracion.Models.Proveedore>

@{
    ViewData["Title"] = "Indice";
}

<h1>Indice</h1>

<p>
    <a asp-action="Create">Crear nuevo proveedor</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Proveedor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Telefono)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Estado)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Proveedor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telefono)
            </td>
                <td>
                    @if (item.Estado == 1)
                    {
                        <span>Habilitado</span>
                    }
                    else
                    {
                        <span>Deshabilitado</span>
                    }
                </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Detalles</a> |
                    @if (item.Estado == 1)
                    {
                        <a asp-action="Delete" asp-route-id="@item.Id">Deshabilitar</a>
                    }
                    else
                    {
                        <a asp-action="Enable" asp-route-id="@item.Id">Habilitar</a>
                    }
            </td>
        </tr>
}
    </tbody>
</table>
