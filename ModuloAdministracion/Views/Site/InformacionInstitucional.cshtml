                        <li><a asp-controller="Site" asp-action="Productos">Productos</a></li>
                        <li><a asp-controller="Site" asp-action="InicioDeSesion">Iniciar sesión</a></li>
                    </ul>
                </nav>
            </div>
            <div class="icons">
                <a href="#" class="icons-btn d-inline-block js-search-open">
                    <span class="icon-search"></span>
                </a>
            </div>
        </div>
    </div>
</div>

