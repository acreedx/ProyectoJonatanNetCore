@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_SiteLayout.cshtml";
}
<div class="site-navbar py-2">
    <div class="search-wrap">
        <div class="container">
            <a href="#" class="search-close js-search-close">
                <span class="icon-close2"></span>
            </a>
            <form action="#" method="post">
                <input type="text"
                       class="form-control"
                       placeholder="Presionar un boton y presiona enter..." />
            </form>
        </div>
    </div>

    <div class="container">
        <div class="d-flex align-items-center justify-content-between">
            <div class="logo">
                <div class="site-logo">
                    <a asp-controller="Site" asp-action="Index" class="js-logo-clone">Farmacia Alicia</a>
                </div>
            </div>
            <div class="main-nav d-none d-lg-block">
                <nav class="site-navigation text-right text-md-center"
                     role="navigation">
                    <ul class="site-menu js-clone-nav d-none d-lg-block">
                        <li><a asp-controller="Site" asp-action="Index">Inicio</a></li>
                        <li><a asp-controller="Site" asp-action="InformacionInstitucional">Información institucional</a></li>
                        <li><a asp-controller="Site" asp-action="Productos">Productos</a></li>
                        <li class="active"><a asp-controller="Site" asp-action="InicioDeSesion">Iniciar sesión</a></li>
                    </ul>
                </nav>
            </div>
            <div class="icons">
                <a href="#" class="icons-btn d-inline-block js-search-open">
                    <span class="icon-search"></span>
                </a>
            </div>
        </div>
    </div>
</div>

<div class="bg-light py-3">
    <div class="container">
        <div class="row">
            <div class="col-md-12 mb-0">
                <a href="index.html">Inicio</a> <span class="mx-2 mb-0">/</span>
                <strong class="text-black">Iniciar Sesión</strong>
            </div>
        </div>
    </div>
</div>

<div class="site-section">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h2 class="h3 mb-5 text-black">
                    Bienvenido al sistema de la farmacia Alicia
                </h2>
            </div>
            <div class="col-md-12">
                <form action="#" method="post">
                    <div class="p-3 p-lg-5 border">
                        <div class="form-group row">
                            <div class="col-md-12">
                                <label for="" class="text-black">Email</label>
                                <input type="email"
                                       class="form-control"
                                       id=""
                                       name=""
                                       placeholder="Ingresa tu correo electrónico"
                                       required />
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-md-12">
                                <label for="" class="text-black">Contraseña</label>
                                <input type="text"
                                       class="form-control"
                                       id=""
                                       name=""
                                       placeholder="Ingresa tu contraseña"
                                       required />
                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="col-lg-12">
                                <input type="submit"
                                       class="btn btn-primary btn-lg btn-block"
                                       value="Iniciar Sesión" />
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="site-section bg-primary">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <h2 class="text-white mb-4">Sucursal</h2>
            </div>
            <div class="col-lg-4"></div>
            <div class="col-lg-4">
                <div class="p-4 bg-white mb-3 rounded">
                    <span class="d-block text-black h6 text-uppercase">Bolivia</span>
                    <p class="mb-0">Plaza del estudiante, La Paz, Bolivia.</p>
                </div>
            </div>
        </div>
    </div>
</div>